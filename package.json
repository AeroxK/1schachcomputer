{
  "name": "1schachcomputer",
  "version": "1.0.0",
  "description": "A chess engine",
  "entryPoint": "dist/backend/index.js",
  "scripts": {
    "build": "npm run test && npm run clean:dist && tsc --project tsconfig.backend.json && webpack --env NODE_ENV=production",
    "clean:dist": "shx rm -rf dist",
    "clean:db": "shx rm -rf data",
    "db": "shx mkdir -p data && mongod --dbpath=data",
    "dev": "concurrently --names \"MONGODB,NODEMON,TSC,WEBPACK\" -c \"#aed581,#2e7d32,#1565c0,#4fc3f7\" \"npm run db\" \"npm run watch:server\" \"npm run watch:backend\" \"npm run watch:frontend\"",
    "dev:backend": "concurrently --names \"MONGODB,NODEMON,TSC\" -c \"#aed581,#2e7d32,#1565c0\" \"npm run db\" \"npm run watch:server\" \"npm run watch:backend\"",
    "dev:frontend": "concurrently --names \"MONGODB,NODEMON,WEBPACK\" -c \"#aed581,#2e7d32,#4fc3f7\" \"npm run db\" \"npm run watch:server\" \"npm run watch:frontend\"",
    "serve": "node dist/backend/index.js",
    "test": "jest",
    "watch:backend": "tsc -w --project tsconfig.backend.json",
    "watch:frontend": "webpack --watch --env NODE_ENV=development",
    "watch:server": "nodemon dist/backend/index.js"
  },
  "author": "Alexander KÃ¶nig",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.35",
    "concurrently": "^6.0.0",
    "css-loader": "^5.0.2",
    "html-loader": "^2.1.0",
    "html-webpack-plugin": "^5.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "shx": "^0.3.3",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@fontsource/roboto": "^4.2.1",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "socket.io": "^3.1.2",
    "socket.io-client": "^3.1.2",
    "winston": "^3.3.3"
  }
}
